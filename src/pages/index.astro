---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<Layout title="Frontend Mentor | Results summary component">
    <main>
        <Card />
    </main>
    <footer class="attribution" slot="footer">
        Challenge by <a
            href="https://www.frontendmentor.io?ref=challenge"
            target="_blank">Frontend Mentor</a
        >. Coded by <a href="#">Igor Gon√ßalves</a>.
    </footer>
</Layout>

<style>
    main {
		width: 100%;
		min-width: var(--mobile);
		max-width: var(--desktop);
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    @media (min-width: 768px) {
        main {
            display: flex;
        }
    }
    .attribution {
		width: 100%;
        font-size: x-small;
        text-align: center;
        margin-top: 4em;
        margin-bottom: 1em;
    }
    .attribution a {
        color: hsl(228, 45%, 44%);
    }
</style>
